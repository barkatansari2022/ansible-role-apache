{{ ansible_managed | comment }}

{% set listen_prefix = (apache_listen_ip~':') if apache_listen_ip != '*' else '' %}
Listen {{ listen_prefix }}{{ apache_listen_port_http }}

<IfModule ssl_module>
        Listen {{ listen_prefix }}{{ apache_listen_port_https }}
</IfModule>

<IfModule mod_gnutls.c>
        Listen {{ listen_prefix }}{{ apache_listen_port_https }}
</IfModule>

